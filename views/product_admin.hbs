<form method="post" enctype="multipart/form-data">
  <div id="ProductAdminLeft">
    <div id="productInfo">
      <h5><input name="productName" type="text" placeholder="Titre Produit"></h5>
      <input name="productDescription" type="text" placeholder="Description du produit">
    </div>
    <div id="amountManagement">
      <div id="exVatZone">
        <input name="productCost" type="number" step="0.01" placeholder="Coutant HT">
        <input name="exVat" type="number" step="0.01" placeholder="Prix HT"> <!-- fonction de l'attribut marge ci-dessous -->
        <input name="margin" type="number" step="0.01" placeholder="Marge réelle ou relative"> <!-- condition js si présence de % -->
      </div>
      <div id="vatZone">
        <p>Prix TTC<span id="taxedPrice">0</span></p>
        <input name="vat" type="number" step="0.01" placeholder="Taux de TVA">
      </div>
      <div id="discountZone">
        <input name="discount" type="number" step="0.01" placeholder="Remise"> <!-- condition js si présence de % -->
      </div>
    </div>
    <div id"materialZone">
      <input id="material1" name="materials" type="text" placeholder="Matériau">
      <input id="material2" name="materials" type="text" placeholder="Matériau">
      <input id="material3" name="materials" type="text" placeholder="Matériau">
      <input id="material4" name="materials" type="text" placeholder="Matériau">
    </div>
    <div id="sizeZone">
      <div id="productSize">
        <input name="length" type="number" step="0.01" placeholder="Longueur Produit en cm">
        <input name="width" type="number" step="0.01" placeholder="Largeur Produit en cm">
        <input name="height" type="number" step="0.01" placeholder="Hauteur Produit en cm">
        <input name="thickness" type="number" step="0.01" placeholder="Epaisseur Produit en cm">
        <input name="surface" type="number" step="0.01" placeholder="Surface Couverte par le Produit">
        <input name="weight" type="number" step="0.01" placeholder="Poids Produit en cm">
      </div>
      <div id="logisticZone">
        <div id="packagingSize">
          <input name="length" type="number" step="0.01" placeholder="Longueur Carton en cm">
          <input name="width" type="number" step="0.01" placeholder="Largeur Carton en cm">
          <input name="height" type="number" step="0.01" placeholder="Hauteur Carton en cm">
          <input name="weight" type="number" step="0.01" placeholder="Epaisseur Carton en cm">
        </div>
        <div id="stockLevel">
          <input name="stock" type="number" step="1" placeholder="Stock Produit">
        </div>
      </div>
    </div>
  </div>
  <div id="ProductAdminRight">
    <div id="qualification">
      <input id="productColor" name="color" type="text" placeholder="Couleur Produit">
      <input id="productBrand" name="brand" type="text" placeholder="Marque">
    </div>
    <div id="graphicElem"> 
      <div>
        <p>Photo Principale</p>
        <label for="mainPhoto">Photo Principale</label>
        <img src="">
        <input type="file" id="mainPhoto" name="mainPhoto" accept=".jpg, .jpeg, .png">  
      </div>
      <div>
        <label for="otherPhotos">Autres Photos</label>
        <input type="file" id="otherPhotos" name="otherPhotos" accept=".jpg, .jpeg, .png" multiple>
      </div>
      <div>
        <label for="notice">Notice</label>
        <input name="notice" type="file" id="notice" accept=".pdf">
      </div>
    </div>  
    <div>
      <select>
        <label for="category" name="category">Catégories</label>
        <option>Verre Trempé</option>
        <option>Polycarbonate</option>
        <option>Adossées</option>
        <option>Accessoires</option>
      </select>
    </div>
    <button type="submit">Créer</button>
    <button type="submit">Editer</button>
    <button type="submit">Supprimer</button>
  </div>
</form>