<h2>Editer la catégorie: {{categories.categoryName}}</h2>
   
<form action="/{{categories._id}}/categories_edit" id="categories_admin" method="post">
  <div>
      <label for="mainPhoto">Photo de la Catégorie</label>
      <img src="">
      <input type="file" name="categoryPhoto" accept=".jpg, .jpeg, .png"/>  
    </div>
  <div id="categoryInfo">
    <input name="categoryName" type="text" value="{{categories.categoryName}}"/>
    <input name="categoryDescription" type="text" value="{{categories.categoryDescription}}"/>
  </div>
  <div class="categorySubmission">
    <button id="editCategory" type="submit">Editer</button>
  </div>
</form>

<script src="/js/admin_categories_edit.js"></script>
